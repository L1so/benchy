}

runiperf() {
  # Define argument
  run_url="$1"
  run_port="$2"
  run_host="$3"
  run_flags="$4"

  # Send test 5 times
  sn=1
  while [ $sn -le 5 ]; do
    printf "%s" "Performing iperf3 send test to $run_host (Attempt #$sn of 5)"
    vport=$(shuf -i $run_port -n 1)
    iperflog=$(timeout 15 $iperf $run_flags -c $run_url -p $vport -P 6 2>/dev/null)
    if [ "$?" -eq 0 ]; then
      send_speed=$(echo "$iperflog" | awk '/SUM/ && /sender/{ print $6, $7 }')
      sleep 1 && overline && break
    else
      sleep 3 && overline
    fi
    sn=$(( sn + 1 ))
  done
  # Receive test 5 times
  rn=1
  while [ $rn -le 5 ]; do
    printf "%s" "Performing iperf3 receive test to $run_host (Attempt #$rn of 5)"
    vport=$(shuf -i $run_port -n 1)
    iperflog=$(timeout 15 $iperf $run_flags -c $run_url -p $vport -P 6 -R 2>/dev/null)
    if [ "$?" -eq 0 ]; then
      rec_speed=$(echo "$iperflog" | awk '/SUM/ && /receiver/{ print $6, $7 }')
      sleep 1 && overline && break
    else
      sleep 3 && overline
    fi
    rn=$(( rn + 1 ))
  done
}

net_header() {
  [ "$arg_skip_network" = "true" ] && return 1
  print_space 1
  netlist
  {
    if [ -z "$arg_prefer_speedtest" ]; then
      printf "Network Performance Test (Region: $continent)\n"
      printf "+%86s+\n" | tr ' ' '-'
      printf "| %-5s | %-11s | %-15s | %-15s | %-15s | %-8s |\n" "Prot." "Provider" "Location" "Send" "Receive" "Latency"
      printf "+%86s+\n" | tr ' ' '='
    else
      printf "Ookla Network Speedtest (Region: $continent)\n"
      printf "+%88s+\n" | tr ' ' '-'
      printf "| %-11s | %-17s | %-12s | %-12s | %-10s | %-9s |\n" "Provider" "Location" "Upload" "Download" "Data Used" "Latency"
      printf "+%88s+\n" | tr ' ' '='
    fi
  } | parse_output
}

parse_iperf() {
  # Internet Protocol Version 4 (IPv4) test
  if [ "$ipv4_status" = "true" ]; then
    iperf_flags="-4"
    prot="IPv4"
    echo "$ipv4_provider" |
    {
      while IFS='|' read -r provider loc port url; do
        runiperf $url $port $provider $iperf_flags
        case "$send_speed" in
          ""|*0.00*) send_speed="busy";;
        esac
        case "$rec_speed" in
          ""|*0.00*) rec_speed="busy";;
        esac
        # Latency test
        printf "%s" "Performing latency test to $provider (avg of 5)"
        latency=$(timeout 10 ping -qc5 $url 2>&1 | awk -F/ '/^rtt/ { printf "%.0f ms\n", $5 }')
        latency="${latency:-busy}"
        overline
        # End latency test
        printf "| %-5s | %-11s | %-15s | %-15s | %-15s | %-8s |\n" "$prot" "$provider" "$loc" "$send_speed" "$rec_speed" "$latency" | parse_output
        unset send_speed rec_speed prot
      done
    }
    printf "+%86s+\n" | tr ' ' '-' | parse_output
  fi

  # Internet Protocol Version 6 (IPv6) test
  if [ "$ipv6_status" = "true" ]; then
    iperf_flags="-6"
    prot="IPv6"
    echo "$ipv6_provider" |
    {
      while IFS='|' read -r provider loc port url; do
        runiperf $url $port $provider $iperf_flags
        case "$send_speed" in
          ""|*0.00*) send_speed="busy";;
        esac
        case "$rec_speed" in
          ""|*0.00*) rec_speed="busy";;
        esac
        # Latency test
        printf "%s" "Performing latency test to $provider (avg of 5)"
        latency=$(timeout 10 ping6 -qc5 $url 2>&1 | awk -F/ '/^rtt/ { printf "%.0f ms\n", $5 }')
        latency="${latency:-busy}"
        overline
        # End latency test
        printf "| %-5s | %-11s | %-15s | %-15s | %-15s | %-8s |\n" "$prot" "$provider" "$loc" "$send_speed" "$rec_speed" "$latency" | parse_output
        unset send_speed rec_speed prot
      done
    }
    printf "+%86s+\n" | tr ' ' '-' | parse_output
  fi
}
parse_speedtest() {
  echo "$spt_provider" |
  {
    while IFS='|' read -r provider loc url; do
      printf %s "Performing Ookla Speedtest to $provider"
      spt_res=$($speedtest --accept-gdpr --accept-license --progress=no --host $url --format=csv 2>/dev/null)
      sptval=$?
      overline
      if [ "$sptval" -ne 0 ]; then
        printf "| %-11s | %-17s | %-12s | %-12s | %-10s | %-9s |\n" "$provider" "$loc" "Failed" "To" "Get" "Data"
      else
        printf %s "$spt_res" | awk -v prov="$provider" -v loc="$loc" -F, '{gsub(/"/, ""); printf "| %-11s | %-17s | %.1f %-6s | %.1f %-6s | %.1f %-6s | %-6.1f %-1.16s |\n", prov, loc, $7/125000, "MB/s", $6/125000, "MB/s", ($8+$9)/(1000*1000*1000), "GB", $3, "ms" }' | parse_output
      fi
    done
  }
  printf "+%88s+\n" | tr ' ' '-' | parse_output
}
geekbench_test() {
  # Skip geekbench on input argument
  [ "$arg_skip_gb" = "true" ] && return 1
  # Exit if ipv6 only
  [ "$ipv4_status" = "false" ] && printf "%s\n" "Geekbench doesn't work over ipv6, exiting test.." && return 1
  print_space 1
  if [ "$gb_version" -eq 5 ]; then
    # Geekbench 5
    if [ ! -f "$geekbench_path/geekbench5" ]; then
      printf "%s\n" "Downloading Geekbench 5, this may take a several minute..."
      file_grabber $gb_ddl_link | tar xzf - --strip-components=1 -C $geekbench_path \
      && printf "\r%s" "$(tput cuu 2; tput ed)"
    fi
    # Perform geekbench 5 test
    printf "%s" "Initializing geekbench 5 test..."
    gb_output=$($geekbench_path/geekbench5 --upload 2>/dev/null | grep -m 1 "https://browser")
    gb_var="div"
    overline
  elif [ "$gb_version" -eq 4 ]; then
    # Geekbench 4
    if [ ! -f "$geekbench_path/geekbench4" ]; then
      printf "%s\n" "Downloading Geekbench 4, this may take a several minute..."
      file_grabber $gb_ddl_link | tar xzf - --strip-components=1 -C $geekbench_path \
      && printf "\r%s" "$(tput cuu 2; tput ed)"
    fi
    # Perform geekbench 4 test
    printf "%s" "Initializing geekbench 4 test..."
    gb_output=$($geekbench_path/geekbench_${gb_arch} --upload 2>/dev/null | grep -m 1 "https://browser")
    gb_var="span"
    overline
  fi
  {
    # Parsing result
    if [ -n "$gb_output" ]; then
      gb_output="${gb_output#"${gb_output%%[![:space:]]*}"}" # Remove whitespace
      gb_output="${gb_output%"${gb_output##*[![:space:]]}"}" # Remove whitespace
      gbfile="$benchy_path/temp_gb${gb_version}.log"
      file_grabber $gb_output $gbfile
      gb_single_core=$(awk -F "<${gb_var}[^>]*>(<d>)?|(</?d>)?</${gb_var}>" '$2~/[0-9]/{print $2}' "$gbfile" | awk 'FNR==1')
      gb_multi_core=$(awk -F "<${gb_var}[^>]*>(<d>)?|(</?d>)?</${gb_var}>" '$2~/[0-9]/{print $2}' "$gbfile" | awk 'FNR==2')
      gb_string=$(gb_string "$gbfile")
      totaltime=$(($(awk 'BEGIN{srand();print srand()}')-$startTime))
      totalmin=$(echo "($totaltime % 3600) / 60" | $bc)
      totalsec=$(echo "$totaltime % 60" | $bc)
      printf "+%47s+\n" | tr ' ' '-'
      printf "| %-32s |\n" "$gb_string"
      printf "+%47s+\n" | tr ' ' '='
      printf "| %-18s | %-24s |\n" "Single Core" "$gb_single_core"
      printf "| %-18s | %-24s |\n" "Multi Core" "$gb_multi_core"
      printf "+%47s+\n" | tr ' ' '-'
      printf "| %-32s |\n" "$gb_output"
      printf "+%47s+\n" | tr ' ' '-'
      printf "| %-18s | %-24s |\n" "Benchy time spent" "$totalmin Minutes $totalsec Seconds"
      printf "+%47s+\n" | tr ' ' '-'
      rm -f "$gbfile"
    else
      printf "%s\n" "Geekbench $gb_version run failed, please retry again"
      return 1
    fi
  } | parse_output
}

main() {
  core_pkg
  tput civis
  header_intro
  user_arch
  binarycheck
  sysinfo | parse_output
  disk_test
  if net_header; then
    [ -n "$arg_prefer_speedtest" ] && parse_speedtest || parse_iperf
  fi
  geekbench_test && send_output
  [ "$arg_temp_file" = "true" ] && rm -fr -- "$benchy_path"
}
main
